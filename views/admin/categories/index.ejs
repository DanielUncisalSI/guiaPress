<%- include("../../partials/header.ejs")%>
<%- include("../../partials/navbar.ejs") %>
<div class="container">
    <hr>
    <h2>Categorias</h2>
    <a href="/admin/categories/new" class="btn btn-success">Criar nova categoria</a>
    <hr>
  <table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Slug</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% categories.forEach(category => { %>
            <tr>
           <th><%- category.id %></th>
           <th><%- category.title %></th>
           <th><%- category.slug %></th>
           <th>
               <a class="btn btn-warning" href="/categories/edit/<%= category.id %>"  >Editar</a>
               <a onclick="confirmaDelecao(event)" class="btn btn-danger" href="/categories/delete/<%- category.id %>">Deletar</a>
        
            </th>
            </tr>
        <% }) %>
    </tbody>
  </table>
</div>

<%- include("../../partials/footer.ejs")%>
