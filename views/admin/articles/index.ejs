<%- include("../../partials/header.ejs")%>
<%- include("../../partials/navbar.ejs") %>
<div class="container">
    <hr>
    <h2>Artigos</h2>
    <a href="/admin/articles/new" class="btn btn-success">Criar novo artigo</a>
    <hr>
  <table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Slug</th>
            <th>Categoria</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
       <%  articles.forEach(article =>{ %>
        <tr>
            <td> <%= article.id %> </td>
            <td> <%= article.title %> </td>
            <td> <%= article.slug %> </td>
            <td> <%= article.category.title %> </td>
            <td>
              <a onclick="confirmaDelecao(event)" class="btn btn-danger" 
              href="/articles/delete/<%- article.id%>">Deletar</a>
            </td>
        </tr>
       <%  }) %>  
    </tbody>
  </table>
</div>

<%- include("../../partials/footer.ejs")%>
